<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base dark background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#2096F3" />
            <corners android:radius="28dp" />
        </shape>
    </item>

    <!-- LEFT CONCENTRIC ARC GLOW (Horizontal center, left side) -->
    <item
        android:gravity="start|center_vertical"
        android:left="-80dp"
        android:top="-40dp"
        android:right="0dp"
        android:bottom="-40dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="180dp"
                android:centerX="0.0"
                android:centerY="0.5"
                android:startColor="#80FFFFFF"
                android:endColor="#00FFFFFF" />
        </shape>
    </item>

    <!-- RIGHT CONCENTRIC ARC GLOW (Horizontal center, right side) -->
    <item
        android:gravity="end|center_vertical"
        android:right="-80dp"
        android:top="-40dp"
        android:left="0dp"
        android:bottom="-40dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="180dp"
                android:centerX="1.0"
                android:centerY="0.5"
                android:startColor="#80FFFFFF"
                android:endColor="#00FFFFFF" />
        </shape>
    </item>

</layer-list>
